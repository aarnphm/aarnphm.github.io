summaries:
  missing: values.filter(value.isType("null")).length
  watched: values.filter(value => status == "finished").length
filters:
  or:
    - file.hasTag("movies")
    - and:
        - file.inFolder("movies")
        - not:
            - file.hasTag("evergreen", "meta")
        - not:
            - file.inFolder("movies/posters")
properties:
  file.tags:
    displayName: tags
  note.director:
    displayName: director
  note.year:
    displayName: year
  note.rating:
    displayName: rating
  note.notes:
    displayName: notes
  note.category:
    displayName: category
  note.studio:
    displayName: production company
  note.runtime:
    displayName: runtime
  note.watched:
    displayName: watched date
views:
  - type: cards
    name: gallery
    groupBy:
      property: year
      direction: DESC
    order:
      - title
      - director
      - rating
      - year
    sort:
      - property: year
        direction: DESC
      - property: rating
        direction: DESC
      - property: watched
        direction: DESC
      - property: title
        direction: ASC
    cardSize: 320
    image: note.posters
  - type: table
    name: to watch
    filters:
      or:
        - status == "to watch"
        - watched.isEmpty()
    groupBy:
      property: year
      direction: DESC
    order:
      - title
      - year
      - director
      - category
      - studio
      - file.tags
    sort:
      - property: year
        direction: DESC
      - property: title
        direction: ASC
    columnSize:
      note.title: 350
      note.year: 100
      note.director: 200
  - type: table
    name: finished
    filters:
      and:
        - status == "finished"
    groupBy:
      property: year
      direction: DESC
    order:
      - title
      - year
      - director
      - rating
      - watched
      - category
      - notes
    sort:
      - property: watched
        direction: DESC
      - property: rating
        direction: DESC
      - property: title
        direction: ASC
    columnSize:
      note.title: 350
      note.year: 100
      note.director: 200
      note.rating: 100
  - type: table
    name: by director
    groupBy:
      property: director
      direction: ASC
    order:
      - title
      - year
      - director
      - rating
      - category
      - watched
    sort:
      - property: director
        direction: ASC
      - property: year
        direction: DESC
    columnSize:
      note.title: 350
      note.year: 100
      note.rating: 100
  - type: table
    name: vintage
    filters:
      and:
        - category == "vintage"
    groupBy:
      property: year
      direction: ASC
    order:
      - title
      - year
      - director
      - rating
      - status
    sort:
      - property: year
        direction: ASC
      - property: title
        direction: ASC
    columnSize:
      note.title: 350
      note.year: 100
      note.director: 200
  - type: table
    name: by studio
    groupBy:
      property: studio
      direction: ASC
    order:
      - title
      - year
      - director
      - rating
      - status
      - watched
    sort:
      - property: studio
        direction: ASC
      - property: year
        direction: DESC
    columnSize:
      note.title: 350
      note.year: 100
      note.director: 200
  - type: table
    name: highly rated
    filters:
      and:
        - rating >= 8
        - status == "finished"
    groupBy:
      property: rating
      direction: DESC
    order:
      - title
      - rating
      - year
      - director
      - category
      - watched
    sort:
      - property: rating
        direction: DESC
      - property: year
        direction: DESC
    columnSize:
      note.title: 350
      note.rating: 100
      note.director: 200
  - type: list
    name: quick list
    groupBy:
      property: category
      direction: ASC
    order:
      - file.name
      - director
      - year
    sort:
      - property: file.name
        direction: ASC
      - property: year
        direction: DESC
      - property: status
        direction: ASC
    nestedProperties: true
  - type: table
    name: editors
    groupBy:
      property: year
      direction: DESC
    order:
      - title
      - file.name
      - director
      - status
      - studio
      - tags
      - watched
      - year
      - rating
      - category
      - description
      - posters
    sort:
      - property: watched
        direction: ASC
      - property: status
        direction: DESC
      - property: rating
        direction: DESC
      - property: tags
        direction: DESC
      - property: title
        direction: ASC
    columnSize:
      file.name: 253
      note.director: 200
      note.tags: 155
